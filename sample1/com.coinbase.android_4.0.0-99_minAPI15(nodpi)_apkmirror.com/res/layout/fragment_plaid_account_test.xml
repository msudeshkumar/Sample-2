<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:id="@id/plaid_test_login" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:padding="@dimen/margin_default" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/text_size_normal" android:textColor="@color/text_dark" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/margin_default" android:text="@string/username" />
            <EditText android:id="@id/plaid_test_username" android:layout_width="fill_parent" android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:padding="@dimen/margin_default" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/text_size_normal" android:textColor="@color/text_dark" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/margin_default" android:text="@string/password" />
            <EditText android:id="@id/plaid_test_password" android:layout_width="fill_parent" android:layout_height="wrap_content" android:inputType="textPassword" />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:padding="@dimen/margin_default" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/text_size_normal" android:textColor="@color/text_dark" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/margin_default" android:text="PIN (only for USAA)" />
            <EditText android:id="@id/plaid_test_pin" android:layout_width="fill_parent" android:layout_height="wrap_content" />
        </LinearLayout>
        <Button android:id="@id/plaid_test_create" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/margin_default" android:text="Create Ach Setup Session" android:filterTouchesWhenObscured="true" style="@style/PrimaryButton" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@id/plaid_test_send_mfa" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Spinner android:id="@id/plaid_test_mfa_spinner" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/margin_default" />
        <Button android:id="@id/plaid_test_send_mfa_button" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/margin_default" android:text="Send MFA" android:filterTouchesWhenObscured="true" style="@style/PrimaryButton" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@id/plaid_test_submit_mfa" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:id="@id/plaid_test_mfa_questions_container" android:layout_width="fill_parent" android:layout_height="wrap_content" />
        <Button android:id="@id/plaid_test_submit_mfa_button" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/margin_default" android:text="Submit MFA" android:filterTouchesWhenObscured="true" style="@style/PrimaryButton" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@id/plaid_test_accounts" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Spinner android:id="@id/plaid_test_accounts_spinner" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/margin_default" />
        <Button android:id="@id/plaid_test_create_bank_account" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/margin_default" android:text="Create Bank Account" android:filterTouchesWhenObscured="true" style="@style/PrimaryButton" />
    </LinearLayout>
</LinearLayout>