        <Button android:id="@id/verify_phone_skip_button" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/skip" />
        <Button android:id="@id/verify_phone_verify_button" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/verify_caps" />
    </LinearLayout>
</LinearLayout>